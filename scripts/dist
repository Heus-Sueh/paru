#!/bin/sh
set -e

TARGET=$(rustc -vV | sed -n 's|host: ||p')
CARCH=${TARGET//-*}

cross build --features generate --release --locked --target-dir target
scripts/mkmo locale/
strip target/${TARGET}/release/paru
tar --zstd -cf paru-${ARCH}.tar.zst man completions paru.conf locale -C target/${TARGET}/release paru

